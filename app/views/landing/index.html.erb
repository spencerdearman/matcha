<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Matcha Feed</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
</head>
<body>
  <div class="feed-container">
    <div class="feed-container-inner">
      <% if @posts.any? %>
        <% @posts.each do |post| %>
          <div class="post" id="post-<%= post.id %>">
            <!-- Post Header -->
            <div class="post-header">
              <div class="profile-info">
                <% if post.user == current_user %>
                  <a href="<%= profile_path %>">
                    <%= image_tag post.user.image.attached? ? post.user.image : "default-profile.png", alt: "Profile Picture", class: "profile-pic" %>
                    <h3><%= post.user.username.capitalize %></h3>
                  </a>
                <% else %>
                  <a href="<%= user_path(post.user) %>">
                    <%= image_tag post.user.image.attached? ? post.user.image : "default-profile.png", alt: "Profile Picture", class: "profile-pic" %>
                    <h3><%= post.user.username.capitalize %></h3>
                  </a>
                <% end %>
              </div>
            </div>

            <!-- Post Body -->
            <div class="post-body">
              <% if post.image.attached? %>
                <%= image_tag post.image, alt: "Post Image", class: "post-image" %>
              <% end %>
            </div>

            <!-- Like and Comment Actions -->
            <div class="post-actions">
              <% if post.liked_by?(current_user) %>
                <%= button_to post_like_path(post, post.likes.find_by(user: current_user)), method: :delete, class: 'icon-heart-filled no-border' do %>
                  <%= image_tag 'filled-love.png', alt: 'Unlike', class: 'icon' %>
                <% end %>
              <% else %>
                <%= button_to post_likes_path(post), method: :post, class: 'icon-heart-outline no-border' do %>
                  <%= image_tag 'love.png', alt: 'Like', class: 'icon' %>
                <% end %>
              <% end %>
              <span><%= post.likes.count %> <%= 'Like'.pluralize(post.likes.count) %></span>

              <!-- Comment Icon -->
              <a href="#" class="icon-comment" data-post-id="<%= post.id %>">
                <%= image_tag 'message.png', alt: 'Comments', class: 'icon' %>
              </a>
              <span><%= post.comments.count %> <%= 'Comment'.pluralize(post.comments.count) %></span>
            </div>

            <!-- Post Caption -->
            <p class="post-caption"><strong><%= post.user.username.capitalize %>:</strong> <%= post.caption %></p>
          </div>
        <% end %>
      <% else %>
        <p>No posts available.</p>
      <% end %>
    </div>
  </div>

  <!-- Modal -->
  <div id="postModal" class="modal">
    <div class="modal-content">
      <span class="close">&times;</span>
      <div id="modal-content"></div>
    </div>
  </div>

  <style>
    /* Feed Container */
    .feed-container {
      display: flex;
      justify-content: center;
      padding: 20px;
      max-width: 100%;
      margin: 0 auto;
      flex-direction: column;
    }

    .feed-container-inner {
      display: flex;
      flex-direction: column;
      gap: 40px;
      justify-content: flex-start;
      width: 100%;
      margin-top: 20px;
    }

    /* Post */
    .post {
      width: 100%;
      max-width: 500px;
      border: 1px solid #ccc;
      border-radius: 10px;
      background-color: white;
      padding: 15px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      margin: 0 auto;
    }

    .post-header {
      display: flex;
      align-items: center;
      margin-bottom: 10px;
    }

    .profile-info {
      display: flex;
      align-items: center;
      justify-content: flex-start;
    }

    .profile-info a {
      display: flex;
      align-items: center;
      text-decoration: none;
    }

    .profile-pic {
      width: 50px;
      height: 50px;
      border-radius: 50%;
      object-fit: cover;
      margin-right: 10px;
    }

    /* Adjusting Post Body and Image */
    .post-body {
      display: flex;
      justify-content: center;
      align-items: center;
      max-height: unset; /* Allow the post to grow dynamically */
    }

    .post-image {
      width: 100%;
      height: auto; /* Maintain aspect ratio */
      border-radius: 8px;
      margin-bottom: 10px;
    }
    
    /* Like and Comment Actions */
    .post-actions {
      display: flex;
      align-items: center;
      gap: 10px;
      margin-top: 10px;
      font-size: 14px;
      color: #555;
    }

    .icon {
      width: 24px;
      height: 24px;
    }

    /* Removing the box around buttons */
    .no-border {
      background: none;
      border: none;
      padding: 0;
      cursor: pointer;
    }

    .no-border img {
      display: inline-block;
    }

    .post-caption {
      margin-top: 10px;
      font-size: 14px;
      text-align: left;
    }

    /* Modal Styles */
    .modal {
      display: none; /* Initially hidden */
      position: fixed;
      z-index: 1000;
      left: 0;
      top: 0;
      width: 100%;
      height: 100%;
      overflow: auto;
      background-color: rgba(0, 0, 0, 0.8);
    }

    .modal-content {
      position: relative;
      margin: auto;
      padding: 20px;
      background: #fff;
      max-width: 800px;
      border-radius: 10px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

    .close {
      position: absolute;
      top: 10px;
      right: 20px;
      font-size: 28px;
      font-weight: bold;
      cursor: pointer;
    }
  </style>

  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const modal = document.getElementById('postModal');
      const modalContent = document.getElementById('modal-content');
      const closeBtn = document.querySelector('.close');

      document.querySelectorAll('.icon-comment').forEach((button) => {
        button.addEventListener('click', async (e) => {
          e.preventDefault();
          const postId = e.target.closest('a').dataset.postId;

          // Fetch the modal content for the post
          const response = await fetch(`/posts/${postId}`, {
            headers: { 'X-Requested-With': 'XMLHttpRequest' },
          });
          const data = await response.text();

          // Insert the fetched content into the modal
          modalContent.innerHTML = data;

          // Display the modal
          modal.style.display = 'block';
        });
      });

      // Close the modal when the close button is clicked
      closeBtn.addEventListener('click', () => {
        modal.style.display = 'none';
      });

      // Close the modal when clicking outside the modal content
      window.addEventListener('click', (event) => {
        if (event.target === modal) {
          modal.style.display = 'none';
        }
      });
    });
  </script>
</body>
</html>
