<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= @user.username %>'s Profile</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <style>
    /* Same profile page styles as before */
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
      background-color: #f5f2e9;
      color: #333333;
    }

    .profile-header {
      display: flex;
      justify-content: center;
      align-items: center;
      max-width: 1400px;
      min-width: 600px;
      margin: 40px auto;
      gap: 20px;
      background-color: #fff;
      border-radius: 15px;
      padding: 40px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .profile-image {
      width: 150px;
      height: 150px;
      border-radius: 50%;
      overflow: hidden;
      padding: 10px;
    }

    .profile-pic {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    .profile-info {
      display: flex;
      flex-direction: column;
      align-items: flex-start;
    }

    .header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      width: 100%;
    }

    .profile-info h2 {
      font-size: 2em;
      margin: 0;
      text-align: left;
    }

    .counts {
      display: flex;
      justify-content: flex-start;
      gap: 20px;
      margin: 15px 0;
    }

    .counts a {
      text-decoration: none;
      font-weight: bold;
      color: #333;
    }

    .btn {
      padding: 10px 20px;
      border-radius: 5px;
      text-decoration: none;
      transition: background-color 0.3s ease;
      color: white;
    }

    .btn-edit {
      background-color: #4CAF50;
    }

    .btn-edit:hover {
      background-color: #45a049;
    }

    .btn-new-post {
      background-color: #2196F3;
      margin-top: 10px;
    }

    .btn-new-post:hover {
      background-color: #1976D2;
    }

    .bio p {
      font-size: 1.2em;
      color: #555;
      text-align: left;
      margin: 0;
    }

    .your-posts-heading {
      text-align: center;
      padding: 20px 0;
      font-size: 2.5em;
      font-weight: bold;
      margin-top: 20px;
    }

    .profile-posts {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
      gap: 40px;
      padding: 0 20px;
    }

    .post {
      display: flex;
      flex-direction: column;
      align-items: center;
      border: 1px solid #ccc;
      padding: 10px;
      background-color: #fff;
      border-radius: 8px;
      text-align: center;
      cursor: pointer;
    }

    .post-image {
      width: 100%;
      height: 300px;
      object-fit: cover;
      border-radius: 8px;
      margin-bottom: 10px;
    }

    /* Modal Styles */
    .modal {
      display: none; /* Initially hidden */
      position: fixed;
      z-index: 1000;
      left: 0;
      top: 0;
      width: 100%;
      height: 100%;
      overflow: auto;
      background-color: rgba(0, 0, 0, 0.8);
      justify-content: center;
      align-items: center;
    }

    .modal-content {
      position: relative;
      margin: auto;
      padding: 20px;
      background: #fff;
      max-width: 800px;
      border-radius: 10px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

    .close-modal {
      position: absolute;
      top: 10px;
      right: 15px;
      font-size: 28px;
      font-weight: bold;
      cursor: pointer;
      border: none;
      background: none;
    }

    /* Modal Post Header (same as profile header) */
    .modal .post-header {
      display: flex;
      align-items: center;
      padding: 20px;
      width: 100%;
    }

    .modal .profile-pic {
      width: 45px;
      height: 45px;
      border-radius: 50%;
      padding: 10px;
      margin-left: 10px;
    }

    .modal .username {
      font-weight: bold;
      font-size: 16px;
    }

    .modal .post-image-large {
      width: 100%;
      max-width: 700px;
      height: auto;
      object-fit: contain;
    }

    .modal .post-sidebar {
      flex: 1.5;
      padding: 20px;
      display: flex;
      flex-direction: column;
      justify-content: flex-start;
      align-items: flex-start;
      border-left: 1px solid #dbdbdb;
      overflow-y: auto;
    }

    .modal .post-likes {
      font-size: 14px;
      color: #262626;
      margin-bottom: 20px;
    }

    .modal .comments-container {
      flex: 1;
      overflow-y: auto;
      border-bottom: 1px solid #dbdbdb;
      margin-bottom: 20px;
      width: 100%;
    }

    .modal .comments-list {
      list-style: none;
      padding: 0;
      margin: 0;
      width: 100%;
    }

    .modal .comments-list li {
      padding: 10px 0;
      border-bottom: 1px solid #f0f0f0;
    }

    .modal .comment-field {
      width: calc(100% - 10px);
      padding: 10px;
      border: 1px solid #dbdbdb;
      border-radius: 5px;
    }

    .modal .form-spacing {
      margin-top: 20px;
    }

    .modal .btn-comment {
      padding: 10px 20px;
      background-color: #0095f6;
      color: white;
      border: none;
      border-radius: 5px;
      cursor: pointer;
    }
  </style>
</head>
<body>
  <div class="profile-header">
    <div class="profile-image">
      <% if @user.image.attached? %>
        <%= image_tag @user.image, alt: "Profile Picture", class: "profile-pic" %>
      <% else %>
        <%= image_tag "default-profile.png", alt: "Default Profile", class: "profile-pic" %>
      <% end %>
    </div>

    <div class="profile-info">
      <div class="header">
        <h2><%= @user.username.capitalize %></h2>
        <%= link_to 'Edit Profile', edit_user_registration_path, class: 'btn btn-edit' %>
      </div>

      <!-- Followers and Following Counts -->
      <div class="counts">
        <%= link_to "#{@user.followers.count} #{'Follower'.pluralize(@user.followers.count)}", followers_user_path(@user) %>
        <%= link_to "#{@user.followed_users.count} #{'Following'.pluralize(@user.followed_users.count)}", following_user_path(@user) %>
      </div>

      <div class="bio">
        <p><%= @user.bio %></p>
      </div>

      <!-- Create New Post Button -->
      <%= link_to 'Create New Post', new_post_path, class: 'btn btn-new-post' %>
    </div>
  </div>

  <% if @user.posts.any? %>
    <div class="profile-posts">
      <% @user.posts.each do |post| %>
        <div class="post" data-post-id="<%= post.id %>">
          <%= image_tag(post.image, alt: 'Post Image', class: 'post-image') if post.image.attached? %>
          <p><%= post.caption %></p>
        </div>
      <% end %>
    </div>
  <% else %>
    <p>You haven't created any posts yet.</p>
  <% end %>

  <!-- Modal -->
  <div id="postModal" class="modal">
    <div class="modal-content">
      <!-- Close Button -->
      <button id="close-modal" class="close-modal">&times;</button>
      <div id="modal-content"></div>
    </div>
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const modal = document.getElementById('postModal');
      const modalContent = document.getElementById('modal-content');
      const closeBtn = document.getElementById('close-modal');

      if (!modal || !modalContent || !closeBtn) {
        console.error('Modal or close button element is missing.');
        return;
      }

      // Open modal on post click
      document.querySelectorAll('.post').forEach((button) => {
        button.addEventListener('click', async (e) => {
          const postId = e.target.closest('.post').dataset.postId;

          try {
            // Fetch content for modal
            const response = await fetch(`/posts/${postId}`, {
              headers: { 'X-Requested-With': 'XMLHttpRequest' },
            });

            if (!response.ok) {
              console.error(`Failed to fetch post data: ${response.statusText}`);
              return;
            }

            const data = await response.text();
            modalContent.innerHTML = data;

            // Show modal
            modal.style.display = 'flex';

            // Rebind close button listener after content update
            closeBtn.addEventListener('click', () => {
              modal.style.display = 'none';
              window.location.reload(); // Reload the page when modal is closed
            });
          } catch (error) {
            console.error('Error fetching modal content:', error);
          }
        });
      });

      // Close modal on button click
      closeBtn.addEventListener('click', () => {
        modal.style.display = 'none';
        window.location.reload(); // Reload the page when modal is closed
      });

      // Close modal when clicking outside modal content
      window.addEventListener('click', (event) => {
        if (event.target === modal) {
          modal.style.display = 'none';
          window.location.reload(); // Reload the page when modal is closed
        }
      });
    });
  </script>
</body>
</html>
