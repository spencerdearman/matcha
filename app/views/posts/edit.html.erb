<h2>Edit Post</h2>

<%= form_with(model: @post, local: true, html: { enctype: 'multipart/form-data' }) do |f| %>
  <div class="form-inputs">
    <%= f.label :caption, "Caption" %>
    <%= f.text_area :caption, rows: 3, maxlength: 500 %>

    <%= f.label :image, "Upload Image" %>
    <%= f.file_field :image, accept: "image/*" %>
  </div>

  <div class="form-actions">
    <%= f.submit "Update Post" %>
  </div>
<% end %>

<%= link_to 'Back to Post', post_path(@post) %> |
<%= link_to 'Back to All Posts', posts_path %>
