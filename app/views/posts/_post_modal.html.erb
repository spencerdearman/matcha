<div id="postModal" class="modal">
  <div class="modal-content">

    <!-- Post Content -->
    <div class="post-container">
      <!-- Left Side: Post Image -->
      <div class="post-main">
        <div class="post-header">
          <%= image_tag(@the_post.user.image.attached? ? @the_post.user.image : "default-profile.png", alt: "Profile Picture", class: "profile-pic") %>
          <span class="username"><%= @the_post.user.username %></span>
        </div>
        <% if @the_post.image.attached? %>
          <%= image_tag(rails_blob_path(@the_post.image, only_path: true), alt: 'Post Image', class: 'post-image-large') %>
        <% end %>
      </div>

      <!-- Right Side: Comments and Interactions -->
      <div class="post-sidebar">
        <!-- Like Section -->
        <div class="post-likes">
          <span><%= @the_post.likes.count %> <%= 'Like'.pluralize(@the_post.likes.count) %></span>
        </div>

        <!-- Comments Section -->
        <div class="comments-container">
          <h3>Comments</h3>
          <ul class="comments-list">
            <% @the_post.comments.each do |comment| %>
              <li>
                <strong><%= comment.user.username %>:</strong> <%= comment.content %>
              </li>
            <% end %>
          </ul>
        </div>

        <!-- Add Comment Form -->
        <%= form_with(model: [@the_post, Comment.new], local: true) do |form| %>
          <%= form.text_field :content, placeholder: 'Write your comment here...', class: 'comment-field' %>
          <div class="comment-button-wrapper">
            <%= form.submit 'Post', class: 'btn-comment' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<style>
  /* Modal Styling */
  .modal {
    display: none;
    position: fixed;
    z-index: 1000;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    overflow: auto;
    background-color: rgba(0, 0, 0, 0.8);
  }

  .modal-content {
    position: relative;
    margin: auto;
    padding: 20px;
    background: #fff;
    max-width: 800px;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
  }

  .close {
    position: absolute;
    top: 10px;
    right: 20px;
    font-size: 28px;
    font-weight: bold;
    cursor: pointer;
  }

  .modal-image img {
    max-width: 100%;
    border-radius: 10px;
  }

  .modal-info {
    padding: 20px 0;
  }

  .modal-comments-list {
    list-style: none;
    padding: 0;
  }

  .modal-comments-list li {
    margin: 10px 0;
  }

  .modal-comment-form {
    display: flex;
    gap: 10px;
  }

  .modal-comment-input {
    flex: 1;
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 5px;
  }

  .modal-comment-submit {
    padding: 10px 20px;
    background-color: #4CAF50;
    color: white;
    border: none;
    border-radius: 5px;
    cursor: pointer;
  }
</style>
