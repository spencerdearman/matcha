<!-- app/views/posts/_post_modal.html.erb -->
<div id="post-modal-<%= post.id %>" class="modal">
  <div class="modal-content">
    <!-- Modal Close Button -->
    <span class="close" data-modal-id="post-modal-<%= post.id %>">&times;</span>

    <!-- Post Image -->
    <div class="modal-image">
      <% if post.image.attached? %>
        <%= image_tag post.image, alt: "Post Image", class: "post-modal-image" %>
      <% end %>
    </div>

    <!-- Post Info -->
    <div class="modal-info">
      <h3><%= post.user.username.capitalize %></h3>
      <p><%= post.caption %></p>
      <hr>

      <!-- Likes and Comments Section -->
      <div class="modal-actions">
        <% if post.liked_by?(current_user) %>
          <%= button_to '', post_like_path(post, post.likes.find_by(user: current_user)), method: :delete, class: 'modal-icon-heart-filled' %>
        <% else %>
          <%= button_to '', post_likes_path(post), method: :post, class: 'modal-icon-heart-outline' %>
        <% end %>
        <span><%= post.likes.count %> <%= 'Like'.pluralize(post.likes.count) %></span>
      </div>

      <h4>Comments (<%= post.comments.count %>)</h4>
      <ul class="modal-comments-list">
        <% post.comments.each do |comment| %>
          <li>
            <strong><%= comment.user.username %>:</strong> <%= comment.content %>
          </li>
        <% end %>
      </ul>

      <!-- Add Comment Form -->
      <%= form_with(model: [post, Comment.new], local: true, html: { class: 'modal-comment-form' }) do |form| %>
        <%= form.text_field :content, placeholder: 'Add a comment...', class: 'modal-comment-input' %>
        <%= form.submit 'Post', class: 'modal-comment-submit' %>
      <% end %>
    </div>
  </div>
</div>

<style>
  /* Modal Styling */
  .modal {
    display: none;
    position: fixed;
    z-index: 1000;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    overflow: auto;
    background-color: rgba(0, 0, 0, 0.8);
  }

  .modal-content {
    position: relative;
    margin: auto;
    padding: 20px;
    background: #fff;
    max-width: 800px;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
  }

  .close {
    position: absolute;
    top: 10px;
    right: 20px;
    font-size: 28px;
    font-weight: bold;
    cursor: pointer;
  }

  .modal-image img {
    max-width: 100%;
    border-radius: 10px;
  }

  .modal-info {
    padding: 20px 0;
  }

  .modal-comments-list {
    list-style: none;
    padding: 0;
  }

  .modal-comments-list li {
    margin: 10px 0;
  }

  .modal-comment-form {
    display: flex;
    gap: 10px;
  }

  .modal-comment-input {
    flex: 1;
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 5px;
  }

  .modal-comment-submit {
    padding: 10px 20px;
    background-color: #4CAF50;
    color: white;
    border: none;
    border-radius: 5px;
    cursor: pointer;
  }
</style>
